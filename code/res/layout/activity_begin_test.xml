<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".BeginTest" >

    <TextView
        android:id="@+id/Question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Fact"
        android:layout_below="@+id/NameAndScore"
        android:layout_marginTop="21dp"
        android:text="apple is name of company" />

    <Button
        android:id="@+id/Fact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Fart"
        android:layout_alignBottom="@+id/Fart"
        android:layout_marginLeft="21dp"
        android:onClick="fact"
        android:text="Fact" />

    <Button
        android:id="@+id/Fart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/Question"
        android:layout_below="@+id/Question"
        android:layout_marginTop="53dp"
        android:onClick="fart"
        android:text="Fart" />

    <TextView
        android:id="@+id/NameAndScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Question"
        android:layout_alignParentTop="true"
        android:layout_marginTop="42dp"
        android:text="Hello " />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/NameAndScore"
        android:layout_alignBottom="@+id/NameAndScore"
        android:layout_toRightOf="@+id/Fact"
        android:text="TextView" />

</RelativeLayout>
